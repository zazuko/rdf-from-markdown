@prefix code: <https://code.described.at/>.
@prefix dash: <http://datashapes.org/dash#>.
@prefix hydra: <http://www.w3.org/ns/hydra/core#>.
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>.
@prefix schema: <http://schema.org/>.
@prefix sh: <http://www.w3.org/ns/shacl#>.
@prefix xsd: <http://www.w3.org/2001/XMLSchema#>.
@prefix ex: <http://example.org/>.
@prefix mark: <http://markdown.org/>.

ex:roleShape a sh:NodeShape;
      sh:class ex:Role;
      sh:name "Role";
      mark:matchHashTag "#role";
      sh:property [ a sh:PropertyShape;
                    sh:path rdf:type;
                    sh:in(ex:Role)
                  ],
                  [ a sh:PropertyShape;
                    sh:name "Assignment";
                    sh:path ex:assignment;
                    mark:matchHeader "Who";
                    sh:nodeKind sh:IRI
                  ],
                  [ a sh:PropertyShape;
                    sh:name "Purpose";
                    sh:path ex:purpose;
                    mark:matchHeader "Purpose";
                    sh:nodeKind sh:Literal
                  ],
                  [ a sh:PropertyShape;
                    sh:name "Task";
                    mark:matchHeader "Tasks";
                    sh:path ex:tasks;
                    sh:nodeKind sh:Literal
                  ].

ex:actionProp a mark:InlineMatcher;
               mark:matchInlineProperty "action";
               sh:path ex:action;
               sh:nodeKind sh:Literal.
